#include <stdio.h>

int main() {
    int age;
    {
    printf("Enter your age: ");
    }
    scanf("%d", &age);

    // Check the age and display a message accordingly
    if (age >= 18) {
        printf("You are an adult.\n");
    } else {
        printf("You are a minor.\n");
    }

    return 0;
}
